<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center" style="margin-bottom:30px">Cocktails list</h1>
    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.image_url %>);">
          <div class="card-category">
            <p>
              <% if cocktail.note.to_f != 0 %>
                <% (1..5).each do |star| %>
                  <%= fa_icon star <= cocktail.note.to_f ? 'star' : 'star-o' %>
                <% end %>
              <% end %>
            </p>
          </div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
